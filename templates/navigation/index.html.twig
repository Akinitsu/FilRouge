{% extends 'base.html.twig' %}

{% block title %}Hello NavigationController!{% endblock %}

{% block body %}
        <div class="row">
        {% for conversation in conversations %}
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="card mt-2">
                    <div class="card-body">
                        <h4 class="card-title">{{ conversation.title}}</h4>
                        <h6 class="card-subtitle mb-2 text-muted">{{ conversation.createdAt |date('d/m/Y') }} Ã  {{ conversation.createdAt | date('H:i') }}</h6>
                        <a href="{{ path('message_show', {'id': conversation.id}) }}" class="btn btn-primary card-link">Voir le message</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
{% endblock %}
